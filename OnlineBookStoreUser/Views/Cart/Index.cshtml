
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3> Cart Page</h3>
<table class="table table-hover">
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>

    @foreach (var item in ViewBag.cart)
    {
    <tr>
        <td><a asp-controller="Cart" asp-action="remove" asp-route-id="@item.Books.BookId">Remove</a></td>
        <td>@item.Books.BookId</td>
        <td>@item.Books.BookName</td>
        <td><img src="@item.Books.BookImage" width="60" /></td>
        <td>@item.Books.BookPrice</td>
        <td>@item.Quantity</td>
        

        <td>@(item.Books.BookPrice * item.Quantity)</td>
    </tr>

    }
    <tr>
        <td align="right" colspan="6">Sum</td>
        <td>@ViewBag.total</td>
    </tr>
</table>
<br />
<a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary">Continue Shopping</a>
<a asp-controller="Customers" asp-action="Login" class="btn btn-sm btn-outline-secondary">Continue</a>

