@model OnlineBookStoreUser.Models.OrderBook
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order1</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
   
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-title">
                    <h1>Invoice</h1>@*<h3>@Html.DisplayFor(model => model.OrderId)</h3>*@

                </div>
                <hr>
                <div class="row">

                    <div class="col-xs-6">
                        <address>
                            <strong>@ViewBag.Customers.FirstName</strong><br>
                            <strong>@ViewBag.Customers.Email</strong><br>
                            <strong>@ViewBag.Customers.Address</strong><br>
                            <strong>@ViewBag.Customers.Contact</strong><br>

                        </address>


                        @*<div class="col-xs-6 text-right">
                            <address>
                                <strong>Shipped To:</strong><br>
                                Jane Smith<br>
                                1234 Main<br>
                                Apt. 4B<br>
                                Springfield, ST 54321
                            </address>
                        </div>*@

                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <address>
                                <strong>Payment Method:</strong><br>
                                Visa ending **** 4242<br>
                                jsmith@email.com
                            </address>
                        </div>
                        <div class="col-xs-6 text-right">
                            <address>
                                <strong>Order Date:</strong><br>
                              <p id="demo"></p>
                                <script>
                                    var d = new Date();
                                    document.getElementById("demo").innerHTML = d;
                                </script>
                            </address>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>Order summary</strong></h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <td><strong>Book Name</strong></td>
                                            <td class="text-center"><strong>Book Quantity</strong></td>
                                            <td class="text-center"><strong>Book Price</strong></td>
                                            @*<td class="text-right"><strong>Totals</strong></td>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.cart)
                                        {
                                            <tr>
                                                <td>@item.Books.BookName</td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-center">@item.Books.BookPrice</td>
                                                @*<td class="text-right">@ViewBag.total</td>*@
                                            </tr>
                                        }
                                        @*<tr>
                                            <td>BS-400</td>
                                            <td class="text-center">$20.00</td>
                                            <td class="text-center">3</td>
                                            <td class="text-right">$60.00</td>
                                        </tr>
                                        <tr>
                                            <td>BS-1000</td>
                                            <td class="text-center">$600.00</td>
                                            <td class="text-center">1</td>
                                            <td class="text-right">$600.00</td>
                                        </tr>
                                        <tr>
                                            <td class="thick-line"></td>
                                            <td class="thick-line"></td>
                                            <td class="thick-line text-center"><strong>Subtotal</strong></td>
                                            <td class="thick-line text-right">$670.99</td>
                                        </tr>
                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><strong>Shipping</strong></td>
                                            <td class="no-line text-right">$15</td>
                                        </tr>*@
                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><strong>Total</strong></td>
                                            <td class="no-line text-right">@ViewBag.total</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-success">Back To Home</a>
</div>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>
